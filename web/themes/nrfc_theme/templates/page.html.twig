<!DOCTYPE html>
<html lang="enGB">
<head>
  <title>{{ head_title|safe_join(' | ') }}</title>
  <head-placeholder token="{{ placeholder_token }}">
    <css-placeholder token="{{ placeholder_token }}">
      <js-placeholder token="{{ placeholder_token }}">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {{ attach_library('nrfc_theme/global-styling') }}
</head>
<body>
<header>
  <div class="super-top">
    <img src="{{ base_path ~ directory }}/images/logo.png" alt="Site Logo"/>
    <div>{{ page.top_right }}</div>
  </div>
  <div class="header-content">
    <div class="founded">Founded<br/>1885</div>
    {{ page.header }}
  </div>
  <div class="header-bottom">
    <img class="bg_fade"
         src="{{ base_path ~ directory }}/images/article-banner-pattern-transparent.png"
         alt="Header background image"/>
    {{ header_bottom }}
    {% if nrfc_theme_header_image %}
      <img src="{{ file_url(nrfc_theme_header_image.entity.uri.value) }}" alt="Logo">
    {% endif %}
  </div>
</header>
<main>
  <div class="content" style="border: 2px green solid">
    {{ page.content }}
  </div>
</main>
<footer>
  <div class="footer-content" style="border: 2px yellow solid">
    {{ page.footer }}
  </div>
</footer>
</body>
</html>
